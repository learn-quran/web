{
  "name": "learn-quran",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "firebase": "^6.0.4",
    "formik": "^1.5.7",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-router-dom": "^5.0.0",
    "react-scripts": "3.0.1",
    "react-spinners": "^0.5.4",
    "yup": "^0.27.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "lint-staged": {
    "linters": {
      "**/*.js": [
        "prettier --write",
        "eslint --fix --max-warnings 0",
        "git add"
      ],
      "**/*.json": [
        "prettier --write",
        "git add"
      ],
      "**/*.scss": [
        "stylelint --fix",
        "git add"
      ]
    },
    "ignore": [
      "node_modules/**/*",
      "yarn.lock",
      "package-lock.json",
      "build/**/*"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-prettier": "^3.1.0",
    "prettier": "^1.17.1"
  }
}
